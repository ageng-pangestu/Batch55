<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../assets/css/projectDetail.css" />
    <script src="https://kit.fontawesome.com/3fbc68957e.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />

    <title>Document</title>
  </head>
  <body>
    <!--NavBar Start-->
    <nav class="navbar navbar-expand-lg bg">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"><img class="rounded" src="../assets/image/fofo-removebg-preview.png" alt="logo" width="60px" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addProject">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonial">Testimonial</a>
            </li>
          </ul>
          <a href="/contact">
            <button class="btn btn-dark border-0" type="submit">Contact Me</button>
          </a>
        </div>
      </div>
    </nav>
    <!--NavBar End-->

    <!--Project Detail start-->
    <div class="container projectDetail-container my-5 rounded bg-light shadow">
      <h1 class="text-center mb-4">{{detail.projectName}}</h1>
      <div class="container-detail">
        <div class="detail-content row d-flex mb-5">
          <div class="content-image col-7">
            <img class="rounded" src="../assets/image/{{detail.image}}" alt="Foto" />
          </div>
          <div class="content-info col-5">
            <h2>Duration</h2>
            <p class="fs-4"><i class="fa-solid fa-calendar-days"></i> {{detail.startDate}} - {{detail.endDate}}</p>
            <p class="fs-4 mb-5"><i class="fa-solid fa-clock"></i> {{detail.duration}}</p>
            <h2>Technologies</h2>
            <div class="info-tech row d-flex">
              <p class="col-6 fs-4"><i class="fa-brands fa-react"></i> React Js</p>
              <p class="col-6 fs-4"><i class="fa-brands fa-js"></i> Javascript</p>
              <p class="col-6 fs-4"><i class="fa-brands fa-node-js"></i> Node Js</p>
              <p class="col-6 fs-4">Socket IO</p>
            </div>
          </div>
        </div>
        <div class="content-text">
          <p class="fs-3">{{detail.description}}</p>
        </div>
      </div>
    </div>
    <!--Project Detail end-->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>