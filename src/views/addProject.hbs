<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="assets/css/myProject.css" />
    <script src="https://kit.fontawesome.com/3fbc68957e.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <title>My Project</title>
  </head>

  <body>
    <!--NavBar Start-->
    <nav class="navbar navbar-expand-lg bg">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"><img class="rounded" src="../assets/image/fofo-removebg-preview.png" alt="logo" width="60px" /></a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addProject">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonial">Testimonial</a>
            </li>
          </ul>
          <a href="/contact">
            <button class="btn btn-dark border-0" type="submit">Contact Me</button>
          </a>
        </div>
      </div>
    </nav>
    <!--NavBar End-->

    <!-- add Project Page start -->
    <div class="container my-5">

      <div class="form-container mx-auto" style="width: 50%;">

        <form method="post" action="/addProject">

          <h1 class="text-center">ADD MY PROJECT</h1>
          <input type="hidden" name="id" value="" />
          <div class="mb-2">
            <label for="projectName" class="form-label fw-bold">Project Name</label>
            <input type="text" class="form-control shadow" id="projectName" name="projectName" />
          </div>

          <div class="row mb-2">
            <div class="col-6">
              <label for="startDate" class="form-label fw-bold">Start Date</label>
              <input type="date" class="form-control shadow" id="startDate" name="startDate" />
            </div>
            <div class="col-6">
              <label for="endtDate" class="form-label fw-bold">End Date</label>
              <input type="date" class="form-control shadow" id="endDate" name="endDate" />
            </div>
          </div>

          <div class="mb-2">
            <label for="desscription" class="form-label fw-bold">Description</label>
            <textarea class="form-control shadow" id="description" name="description"></textarea>
          </div>

          <label for="technologies" class="form-label fw-bold">Technologies</label>
          <div class="mb-2 d-flex justify-content-center row">
            <div class="col-6 mb-2">
              <input type="radio" id="RadioNodeJs" name="technologies" value="Node Js" />
              <label for="technologies">Node Js</label>
            </div>
            <div class="col-6">
              <input type="radio" id="RadioNextJs" name="technologies" value="Next Js" />
              <label for="technologies">Next Js</label>
            </div>
            <div class="col-6">
              <input type="radio" id="RadioReactJs" name="technologies" value="React Js" />
              <label for="technologies">React Js</label>
            </div>
            <div class="col-6">
              <input type="radio" id="RadioTypescript" name="technologies" value="Typescripe Js" />
              <label for="technologies">Typescript</label>
            </div>
          </div>

          <div class="mb-4">
            <label class="form-label fw-bold" for="image">Upload Image</label>
            <input class="form-control shadow" type="file" id="inputImage" name="image" />
          </div>

          <div class="submit d-flex justify-content-end">
            <button type="submit" class="btn-submit btn-light rounded">submit</button>
          </div>
        </form>

      </div>

    </div>
    <!-- myProject Page End -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>

</html>